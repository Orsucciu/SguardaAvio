<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/list_flight_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/departure_airport"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="288dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/arrival_airport"
        android:layout_width="94dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="308dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/departure_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/departure_airport"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="288dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/arrival_time"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrival_airport"
        android:layout_alignParentStart="true"
        android:layout_marginStart="320dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/flight_name"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/flight_time"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_name"
        android:layout_alignRight="@id/flight_name"
        android:text="TextView" />

</RelativeLayout>